{
    "name": "hostnet/phpcs-tool",
    "description": "PHP_CodeSniffer tokenises PHP, JavaScript and CSS files and detects violations of a defined set of coding standards. Hostnet version",
    "type": "library",
    "keywords": [
        "phpcs",
        "standards",
        "hostnet"
    ],
    "homepage": "http://www.squizlabs.com/php-codesniffer",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Greg Sherwood",
            "role": "originial author"
        },
        {
            "name": "Nico Schoenmaker",  "email" : "nschoenmaker@hostnet.nl", "role" : "developper"
        },
        {
            "name": "Hidde Boomsma",  "email" : "hboomsma@hostnet.nl", "role" : "developper"
        }
    ],
    "support": {
        "issues": "https://github.com/hostnet/PHP_CodeSniffer/issues",
        "source": "https://github.com/hostnet/PHP_CodeSniffer"
    },
    "autoload": {
        "classmap": [
            "CodeSniffer.php",
            "src/CLI.php",
            "src/Exception.php",
            "src/File.php",
            "src/Report.php",
            "src/Reporting.php",
            "src/Sniff.php",
            "src/Tokens.php",
            "src/Reports/",
            "src/CommentParser/",
            "src/Tokenizers/",
            "src/DocGenerators/",
            "src/Standards/AbstractPatternSniff.php",
            "src/Standards/AbstractScopeSniff.php",
            "src/Standards/AbstractVariableSniff.php",
            "src/Standards/IncorrectPatternException.php",
            "src/Standards/Generic/Sniffs/",
            "src/Standards/MySource/Sniffs/",
            "src/Standards/PEAR/Sniffs/",
            "src/Standards/PSR1/Sniffs/",
            "src/Standards/PSR2/Sniffs/",
            "src/Standards/Squiz/Sniffs/",
            "src/Standards/Zend/Sniffs/",
            "src/Standards/Hostnet/Sniffs/",
            "src/Standards/Symfony2/Sniffs/"
        ]
    },
    "suggest": {
        "phpunit/php-timer": "dev-master"
    },
    "require": {
        "php": ">=5.1.2",
        "ext-tokenizer": "*"
    },
    "bin": [
        "scripts/phpcs"
    ],
    "replace": {
        "squizlabs/php_codesniffer" : "*"
    },
    "require-dev": {
        "phpunit/phpunit": "3.*"
    }
}
